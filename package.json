{
  "name": "modr",
  "version": "0.1.1",
  "description": "extend require() calls",
  "main": "lib/modr.js",
  "scripts": {
    "clean": "if [ -e lib ]; then rm -r lib; fi",
    "build": "babel src -d lib -s",
    "test": "NODE_ENV=development mocha --opts mocha.opts src/*_test.js",
    "prepublish": "git stash save -u \"prepublish $(git describe --always)\" && npm run clean && npm run build"
  },
  "keywords": [
    "require",
    "plugins",
    "hooks",
    "extensions"
  ],
  "author": "Andrei Cocorean",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrei-cocorean/modr.git"
  },
  "files": [
    "src",
    "lib",
    ".babelrc",
    ".eslintrc.json",
    "mocha.opts",
    "register.js"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.6.4",
    "babel-eslint": "^5.0.0",
    "babel-preset-es2015-node4": "^2.0.3",
    "babel-register": "^6.6.0",
    "chai": "^3.5.0",
    "eslint": "^2.2.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "mocha": "^2.4.5",
    "mocha-clean": "^1.0.0",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0"
  }
}
